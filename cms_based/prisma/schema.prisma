generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Audience {
  general
  company
  freelance
}

model Hero {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  subtitle  String?
  tone      String   @default("neutral") // neutral, technical, narrative
  isVisible Boolean  @default(true)
  updatedAt DateTime @updatedAt
  audience  Audience @default(general)
}

model Story {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  isVisible Boolean    @default(true)
  tabs      StoryTab[]
  updatedAt DateTime   @updatedAt
}

type StoryTab {
  id        String
  title     String
  content   String
  isVisible Boolean    @default(true)
  audiences Audience[]
  year      String?
}

model SkillsSection {
  id         String          @id @default(auto()) @map("_id") @db.ObjectId
  isVisible  Boolean         @default(true)
  categories SkillCategory[]
  updatedAt  DateTime        @updatedAt
}

type SkillCategory {
  id        String
  title     String
  isVisible Boolean     @default(true)
  audiences Audience[]
  skills    SkillItem[]
}

type SkillItem {
  id        String
  name      String
  iconName  String?
  isVisible Boolean    @default(true)
  audiences Audience[]
  isCore    Boolean    @default(false)
}

model ProjectsSection {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  isVisible Boolean       @default(true)
  projects  ProjectItem[]
  updatedAt DateTime      @updatedAt
}

type ProjectItem {
  id          String
  title       String
  description String
  images      String[]
  techStack   String[] 
  liveUrl     String?
  repoUrl     String?
  audiences   Audience[]
  isVisible   Boolean    @default(true)
  useIframe   Boolean    @default(false)
}

model TestimonialsSection {
  id            String            @id @default(auto()) @map("_id") @db.ObjectId
  isVisible     Boolean           @default(true)
  onlyFreelance Boolean           @default(false)
  testimonials  TestimonialItem[]
  updatedAt     DateTime          @updatedAt
}

type TestimonialItem {
  id        String
  name      String
  role      String
  company   String?
  content   String
  avatarUrl String?
  isVisible Boolean @default(true)
}

model Testimonial {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  clientName String
  content    String
  role       String?
  company    String?
  isVisible  Boolean  @default(true)
  draftNotes String?
  updatedAt  DateTime @updatedAt
}

model ContactSection {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  isVisible     Boolean  @default(true)
  title         String   @default("Get in touch")
  subtitle      String   @default("Have a project in mind or just want to say hi?")
  receiverEmail String   @default("anurag.tiwari@example.com")
  updatedAt     DateTime @updatedAt
}

model ContactSubmission {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String
  message   String
  status    String   @default("unread") // unread, read, archived
  meta      Json?
  createdAt DateTime @default(now())
}
