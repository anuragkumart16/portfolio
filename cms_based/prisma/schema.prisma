generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Audience {
  general
  company
  freelance
}

model Hero {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  subtitle  String?
  tone      String   @default("neutral") // neutral, technical, narrative
  isVisible Boolean  @default(true)
  updatedAt DateTime @updatedAt
  audience  Audience @default(general)
}

model Story {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  isVisible Boolean    @default(true)
  tabs      StoryTab[]
  updatedAt DateTime   @updatedAt
}

type StoryTab {
  id        String
  title     String
  content   String
  isVisible Boolean    @default(true)
  audiences Audience[]
  year      String?
}

model SkillsSection {
  id         String          @id @default(auto()) @map("_id") @db.ObjectId
  isVisible  Boolean         @default(true)
  categories SkillCategory[]
  updatedAt  DateTime        @updatedAt
}

type SkillCategory {
  id        String
  title     String
  isVisible Boolean     @default(true)
  audiences Audience[]
  skills    SkillItem[]
}

type SkillItem {
  id        String
  name      String
  iconName  String?
  isVisible Boolean    @default(true)
  audiences Audience[]
  isCore    Boolean    @default(false)
}

// Replaced legacy Project model
model ProjectsSection {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId
  isVisible Boolean       @default(true)
  projects  ProjectItem[]
  updatedAt DateTime      @updatedAt
}

type ProjectItem {
  id          String
  title       String
  description String
  images      String[]
  techStack   String[] // e.g. ["Next.js", "Prisma"]
  liveUrl     String?
  repoUrl     String?
  audiences   Audience[]
  isVisible   Boolean    @default(true)
}

model Testimonial {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  clientName String
  content    String
  role       String?
  company    String?
  isVisible  Boolean  @default(true)
  draftNotes String?
  updatedAt  DateTime @updatedAt
}

model ContactSubmission {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  message   String?
  meta      Json?
  createdAt DateTime @default(now())
}
